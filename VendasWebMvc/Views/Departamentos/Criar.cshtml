@model VendasWebMvc.Models.ViewModels.DepartamentoFormViewModel

@{
    ViewData["Title"] = "Criar";
}

<h2>@ViewData["Title"]</h2>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Departamento.Nome" class="control-label"></label>
                <input asp-for="Departamento.Nome" class="form-control" />
                <span asp-validation-for="Departamento.Nome" class="text-danger"></span>
            </div>
               <div class="form-group">
            <label asp-for="Departamento.EmpresaId" class="control-label"></label>
             <select asp-for="Departamento.EmpresaId" asp-items="@(new SelectList(Model.Empresas,"Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
